<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Baju</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' href='style.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <%- include ('../components/navbar.ejs') %>
    <h1 class="text-center mt-5">Produk Baju (<%= baju.length %> Barang)</h1>
    <div class="row justify-content-center">
        <form action="/baju">
            <div class="input-group">
                <div class="form-outline">
                    <input type="text" id="form1" name='keyword' class="form-control" />
                </div>
                <button type="submit" class="btn btn-dark">
                    Cari
                </button>
            </div>
        </form>
    </div>

    <hr>
    <div class="row justify-content-center">
        <% if (baju.length> 0){ %>
        <% baju.forEach (function(baju) { %>
        <div class="col-lg-3 py-4">
            <div class="card mb-3">
                <div class="card-body">
                    <img class="card-img-top"
                        src="data:image/<%=baju.img.contentType%>;base64,<%=baju.img.data.toString('base64')%>">
                    <h5 class="card-title"><a href="/baju/<%= baju._id %>">
                            <%= baju.namaBaju %>
                    </h5></a>
                    <p class="card-text text-muted">
                        <%= baju.hargaBaju %>
                    </p>
                    <a class="btn btn-success"
                        href="/baju/update/<%= baju._id %>/<%= baju.id %>/<%= baju.namaBaju %>/<%= baju.hargaBaju %>/<%= baju.password %>">Update</a>
                    <a class="btn btn-danger" href="/baju/hapus/<%= baju._id %>">Hapus</a>
                </div>
            </div>
        </div>
        <% }); %>
        <% } else { %>
        <p>Data Baju kosong</p>
        <% } %>
    </div>

    <div class="container mb-5">
        <div class="row">
            <div class="col text-center">
                <a class='btn btn-dark mx-auto' style='padding: 15px; font-size: large;' href="baju/create">Tambah
                    Barang</a>
            </div>
        </div>
    </div>

    <%- include ('../components/footer') %>

</body>

</html>